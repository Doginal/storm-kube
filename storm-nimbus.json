{
  "kind": "Pod",
  "apiVersion": "v1beta3",
  "metadata": {
    "name": "nimbus",
    "labels": {
      "name": "nimbus"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "nimbus",
        "image": "mattf/storm-nimbus",
        "ports": [
          {
            "containerPort": 6627
          },
        "volumeMounts": {
          "name": "topologies",
          "mountPath": "/data/topologies"
        }
        ],
        "resources": {
          "limits": {
            "cpu": "100m"
          }
        }
      }
    ],
    "volumes": {
      "name": "topologies",
      "hostDir": "/home/spinnakr/data"
    }
  }
}